@model List<AppoinmentViewModel>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }</style>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

</head>
<body>
    <div class="column-container">
        <table class="table" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th style="width:150px">Service</th>
                    <th style="width:150px">Salon</th>
                    <th style="width:150px">Appoinment Time</th>
                    <th style="width:150px">Action</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in @Model)
                {
                    <tr>
                        
                        <td>@service.Service.Name</td>
                        <td>@service.Service.Salon.Name</td>
                        <td>@service.AppoinmentDate</td>
                        <td>
                            <div>
                                <input type="button" value="Edit/Delete" onclick="location.href='@Url.Action("EditAppointment", "Services", new {id = service.Id})'" />
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>

</html>

