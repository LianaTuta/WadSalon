@page
@model IList<SalonModel>

@{
    Layout = "_Layout";
}
<head>

    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

</head>
<body>
    <div class="column-container">
        @foreach (var item in ViewBag.SalonList)
        {
            <a href="@Url.Action("SalonDetails", "Salons", new {salonId=item.Id})" title="List View" class="links">

                <div class="row-container border-color-list">
                    <div>@item.Name</div>
                    <img class="img" src="~/Images/@item.ImagePath" alt="No Image" />
                </div>
            </a>
        }
    </div>
</body>
